<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/main_layout"
    android:gravity="center_horizontal|center_vertical"
    tools:context="NewActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAY DRUM"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_margin="20dp"
        android:id="@+id/playdrum"
        android:background="@color/white"
        android:onClick="onPlayDrumButtonClicked" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go Face Book"
        android:textColor="#ffffffff"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_margin="20dp"
        android:layout_below="@+id/playdrum"
        android:id="@+id/gofacebook"
        android:background="@color/white"
        android:onClick="onGoFaceBookButtonClicked" />

</RelativeLayout>
